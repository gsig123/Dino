extends layout

block content
	div(class="container-fluid")
		div(class="row")
			div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
				div(class="well col-xs-12 col-sm-12 col-md-12 col-lg-12")
					h1(class="text-center") Dino
					br
					p(class="text-center") Welcome to #{title}
					br
					br
					form(method="post", action="/search")
						div(class="form-group has-feedback")
							input(type="text" class="form-control" id="searchInput" placeholder="Search" name="searchBar")
							i(class="glyphicon glyphicon-search form-control-feedback")
						div(class="form-group")
							div(class="btn-group type-group" role="group" aria-label="...")
								label Fast Food 
									input(type="checkbox" value="FastFood" name="parameterGroup" checked=(checked.FastFood ? "checked" : undefined))  
								br
								label Asian
									input(type="checkbox" value="Asian" name="parameterGroup" checked=(checked.Asian ? "checked" : undefined))
								br
								label Fish
									input(type="checkbox" value="Fish" name="parameterGroup" checked=(checked.Fish ? "checked" : undefined))
								br
								label Steak
									input(type="checkbox" value="Steak" name="parameterGroup" checked=(checked.Steak ? "checked" : undefined))
								br
								label Vegan
									input(type="checkbox" value="Vegan" name="parameterGroup" checked=(checked.Vegan ? "checked" : undefined))
						div(class="form-group")
							b(id="price-slider-low") 500 kr
							input(input id="price-slider" type="text" class="span2" data-slider-min="500" data-slider-max="10000" data-slider-step="100" data-slider-value=(priceRangeArr) value=(priceRange) data-slider-tooltip="hide" name="priceRange" )
							b(id="price-slider-high") 10000 kr
						div(class="form-group")
							button(type="submit" class="btn btn-primary pull-right") Search
		div(class="row")
			div(class="offerContainer col-xs-12 col-sm-6 col-md-3 col-lg-3")
				a(data-toggle="modal" data-target=".offer-modal-1")
					div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 well" )
						h4(class="restaurantName") Fish Company
						img(src="img/fclogo.png")
						h4 Finest Fish
						h4(class="price") 5.400 kr
			div(class="offerContainer col-xs-12 col-sm-6 col-md-3 col-lg-3")
				a(data-toggle="modal" data-target=".offer-modal-2")
					div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 well" )
						h4(class="restaurantName") Fish Company
						img(src="img/fclogo.png")
						h4 Finest Fish
						h4(class="price") 5.400 kr
			div(class="offerContainer col-xs-12 col-sm-6 col-md-3 col-lg-3")
				a(data-toggle="modal" data-target=".offer-modal")
					div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 well" )
						h4(class="restaurantName") Fish Company
						img(src="img/fclogo.png")
						h4 Finest Fish
						h4(class="price") 5.400 kr
			div(class="offerContainer col-xs-12 col-sm-6 col-md-3 col-lg-3")
				a(data-toggle="modal" data-target=".offer-modal")
					div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 well" )
						h4(class="restaurantName") Fish Company
						img(src="img/fclogo.png")
						h4 Finest Fish
						h4(class="price") 5.400 kr

			//- Offer Modal View
			div(class="modalContainer modal fade offer-modal-1" tabindex="-1" role="dialog" aria-labelledby="offerModalLabel")
				div(class="modal-dialog modal-lg" role="document")
					div(class="modal-content")
						h2 Finest Fish
						img(src="img/fclogo.png")
						p straight from the sea, via our old friend the FISHERMAN – Please consult your waiter
						h3 5.400 kr
						br

			div(class="modalContainer modal fade offer-modal-2" tabindex="-1" role="dialog" aria-labelledby="offerModalLabel")
				div(class="modal-dialog modal-lg" role="document")
					div(class="modal-content")
						h2 FINEST FISH 1
						img(src="img/fclogo.png")
						p straight from the sea, via our old friend the FISHERMAN – Please consult your waiter
						h3 5.400 kr
						br
