extends layout

block content

	div(class="well restProfile-info-container")
		div(class="row")
			div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12 title")
				h1(class="text-center") #{restaurantName}
			div(class="col-xs-12 col-sm-6 col-md-6 col-lg-6")
				img(src="/img/restaurantImg/#{image}")
			div(class="col-xs-12 col-sm-6 col-md-6 col-lg-6")
				h3 Description
				p #{description}
				h3 Info
				each branch in branches 
					p #{branch.address}
					p #{branch.postal}
					p #{branch.city}
				i(class="glyphicon glyphicon-earphone")
				a(href="tel:#{phonenumber}") #{phonenumber} 
				br
				br
				i(class="glyphicon glyphicon-globe")
				a(href="http://#{website}") Website
				br
				br
				div
					form(method="post", action="/users/admin/editRestaurantInfo", enctype="multipart/form-data")
						input(class="btn btn-primary", type="submit", name="submit", value="Edit Restaurant Informations")
						br
						br
				div
					a(class="btn btn-primary" href="/users/addOffer") Add Offer
					
	div(class="restProfile-offer-container")
		div(class="row")
			div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
				h2(class="text-center") Offers
				each offer in offers
					a(data-toggle="collapse" href="##{offer.id}" aria-expanded="false" aria-controls="")
						div(class="well")
							div(class="pull-left")
								h4(class="pull-left bold") #{offer.name}
							div(class="pull-right")
								h4(class="pull-left price") #{offer.price} kr
							div(class="clearfix")
							div(class="collapse" id="#{offer.id}") 
								h5(class="bold") Description
								p #{offer.description}
								h5(class="bold") Type
								p #{offer.type}
								h5(class="bold") Days of week
								p Dagar.....
								h5(class="bold") Time
