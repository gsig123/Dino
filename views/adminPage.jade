
extends layout

block content
	div(class="well restProfile-info-container col-xs-12 col-sm-12 col-md-12 col-lg-12")
		div(class="row")
			div(class="profile-pic-container col-xs-12 col-sm-12 col-md-3 col-lg-3")
				img(class="profile-pic" src="#{image}")
			div(class="profile-name-container col-xs-12 col-sm-12 col-md-9 col-lg-9")
				h1(class="profile-name") #{restaurantName}
			div(class="col-xs-12 col-sm-12 col-md-9 col-lg-9")
				hr(class="profile-line")
			div(class="col-xs-12 col-sm-12 col-md-9 col-lg-9")
				p #{description}
			div(class="col-xs-12 col-sm-12 col-md-9 col-lg-9")
				hr(class="profile-line")
			div(class="profile-contact col-xs-12 col-sm-12 col-md-9 col-lg-9")
				each branch in branches 
					div(class="profile-contact-item col-xs-12 col-sm-12 col-md-4 col-lg-4")
						div(class="profile-contact-icon-container col-xs-3 col-sm-2 col-md-3 col-lg-3")
							img(class="profile-contact-icon" src="/icons/map.svg")
						div(class="profile-contact-text-container col-xs-8 col-sm-8 col-md-9 col-lg-9")
							p #{branch.address}
							p #{branch.postal} #{branch.city}
					div(class="profile-contact-item col-xs-12 col-sm-12 col-md-4 col-lg-4")
						div(class="profile-contact-icon-container col-xs-3 col-sm-2 col-md-3 col-lg-3")
							img(class="profile-contact-icon" src="/icons/phone.svg")
						div(class="profile-contact-text-container profile-contact-item col-xs-8 col-sm-8 col-md-9 col-lg-9")
							a(href="tel:#{phonenumber}") #{phonenumber} 
					div(class="profile-contact-item col-xs-12 col-sm-12 col-md-4 col-lg-4")
						div(class="profile-contact-icon-container col-xs-3 col-sm-2 col-md-3 col-lg-3")
							img(class="profile-contact-icon" src="/icons/web.svg")
						div(class="profile-contact-text-container col-xs-8 col-sm-8 col-md-9 col-lg-9")
							a(href="http://#{website}") Visit Website
				div
					a(class="btn btn-primary", href="/users/editRestaurantInfo") Edit Info
					a(class="btn btn-primary", href="/users/editRestaurantImage") Change Photo
					a(class="btn btn-primary", href="/users/addOffer") Add Offer
	div(class="restProfile-offer-container")
		div(class="row")
			div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
				h2(class="text-center") Offers
				each offer in offers
					a(data-toggle="collapse" href="##{offer.id}" aria-expanded="false" aria-controls="")
						div(class="well")
							div(class="pull-left")
								h4(class="pull-left bold") #{offer.name}
							div(class="pull-right")
								h4(class="pull-left price") #{offer.price} kr
							div(class="clearfix")
							div(class="collapse" id="#{offer.id}") 
								h5(class="bold") Description
								p #{offer.description}
								h5(class="bold") Type
								p #{offer.type}
								h5(class="bold") Time
								p #{offer.timeFrom} to #{offer.timeTo}
								a(class="btn btn-default", href="/users/editOffer#{offer.id}")
									span(class="glyphicon glyphicon-edit" aria-hidden="true")
								a(class="btn btn-danger delete-offer", href="", data-id="#{offer.id}")
									span(class="glyphicon glyphicon-remove" aria-hidden="true")
