extends layout

block content
	div(class="container-fluid")
		div(class="well")
			if errors
				for error in errors
					div(class="alert alert-danger") #{error.msg}

			form(method="post", action="/users/admin/editRestaurantInfo", enctype="multipart/form-data")
				div(class="rows")
					div(class="form-group")
						h2= restaurantName
					div(class="form-group")
						h4 E-mail:
						h4= Email
					div(class="form-group")
						h4 Phonenumber:
						h4= phonenumber
					div(class="form-group")
						h4 Website:
						a(href="/") website
					div(class="form-group")
						h4 Description:
						h4= description
				div(class="rows")
					h4 hallo
				input(class="btn btn-primary", type="submit", name="submit", value="Edit restaurant information")
		div(class="row") 
			form(method="post", action="/users/admin/addOfferInRestaurant")
				input(class="btn btn-primary", type="submit", name="submit", value="Add Offer")
