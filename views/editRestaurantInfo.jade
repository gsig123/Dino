extends layout

block content

	div(class="well")

		h1 Change your restaurant informations here below
		if errors
			for error in errors
				div(class="alert alert-danger") #{error.msg}

		form(method="post", action="/users/admin/saveChanges", enctype="multipart/form-data")
			div(class="form-group")
				label Name of the Restaurant
				input(class="form-control", name="restaurantName" , readonly, type="text", placeholder="Enter Name")
			div(class="form-group")
				label Email
				input(class="form-control", readonly, name="email", type="text", placeholder="Enter Email")
			div(class="form-group")
				label Phonenumber
				input(class="form-control", name="phonenumber", type="phonenumber", placeholder="Enter Phonenumber")
			div(class="form-group")
				label Website URL
				input(class="form-control", name="website", type="text", placeholder="Enter Website URL")
			div(class="form-group")
				label Address
				input(class="form-control", name="address", type="text", placeholder="Enter Address")
			div(class="form-group")
				label City
				input(class="form-control", name="city", type="text", placeholder="Enter City")
			div(class="form-group")
				label Postal Code
				input(class="form-control", name="postalCode", type="number", placeholder="Enter Postal Code")
			div(class="form-group")
				label Description of your restaurant
				textarea(class="form-control", name="description", placeholder="Enter Description")
			div(class="form-group")
				label Image
				input(type="file", class="form-control", name="restaurantImage")
			input(class="btn btn-primary", type="submit", name="submit", value="Save Changes")
